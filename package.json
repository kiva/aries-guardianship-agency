{
  "name": "agency",
  "version": "1.0.0",
  "private": true,
  "description": "agency for Kiva Protocol",
  "license": "none",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:debug": "nodemon --legacy-watch",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@kiva/protocol-common": "0.1.11",
    "@nestjs/common": "^7.1.3",
    "@nestjs/core": "^7.1.3",
    "@nestjs/platform-express": "^7.1.3",
    "@nestjs/swagger": "^4.5.10",
    "@types/dockerode": "^2.5.32",
    "cache-manager": "^3.3.0",
    "cache-manager-fs-hash": "0.0.9",
    "class-validator": "^0.12.2",
    "cls-hooked": "4.2.2",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.2.0",
    "dd-trace": "^0.22.0",
    "dockerode": "^3.2.0",
    "dotenv": "^8.2.0",
    "express-jwt": "^5.3.3",
    "express-opentracing": "^0.1.1",
    "express-rate-limit": "^5.1.3",
    "express-request-id": "1.4.1",
    "helmet": "^3.23.1",
    "http-proxy-middleware": "^1.0.4",
    "jaeger-client": "^3.18.0",
    "jwks-rsa": "^1.8.0",
    "opentracing": "^0.14.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "swagger-ui-express": "^4.1.4",
    "typescript": "^3.9.5",
    "winston-loggly-bulk": "^3.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.1.3",
    "@types/jest": "^25.2.1",
    "@types/supertest": "^2.0.9",
    "kill-port": "^1.6.0",
    "jest": "^25.4.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "6.1.2"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts"
  }
}
